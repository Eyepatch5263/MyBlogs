<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Home</title>
        <style>
            body {
                font-family: Georgia, 'Times New Roman', Times, serif;
            }
        </style>
</head>

<body>
    <%- include('./partials/nav') %>
            <div class="container" style="margin-left: 1%; margin-top: 1%;">
                <div class="row row-cols-3">
                    <% blogs.forEach(blog=> { %>
                        <div class="col">
                            <div class="card" style="width: 20rem;">
                                <img src=" <%= blog.coverImage %> " class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= blog.title %>
                                    </h5>
                                    <a href="<%= blog._id %>" class="btn btn-dark">View More</a>
                                </div>
                            </div>
                        </div>
    
                        <% }) %>
                </div>
                
            
        </div>

        <%- include('./partials/script') %>
</body>

</html>